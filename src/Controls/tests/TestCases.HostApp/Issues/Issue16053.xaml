<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue16053"
             xmlns:local="clr-namespace:Maui.Controls.Sample.Issues">

  <VerticalStackLayout>
    <ListView x:Name="ListView1" Margin="10" BackgroundColor="LightGray"/>
    <Button Text="Clear" Clicked="Button_Click_1" AutomationId="ClearButton"/>
    <Button Text="Change Items" Clicked="Button_ChangeItems" AutomationId="ChangeItemsButton"/>
    <Button Text="Remove Selected Item" Clicked="Button_RemoveSelectedItem" AutomationId="RemoveSelectedItemButton"/>
    <Button Text="Click to show the SelectedItem" Clicked="Button_Clicked" AutomationId="ShowSelectedItem"/>
    <Label x:Name="lbl" Margin="10,10,10,0" AutomationId="SelectedItemLabel"/>
  </VerticalStackLayout>
</ContentPage>