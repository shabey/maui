<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue25256">
    <Grid RowDefinitions="*,Auto,Auto">
        <ListView Scrolled="ListView_Scrolled"
                  Grid.Row="0"
                  x:Name="list"
                  AutomationId="list"
                  Grid.Column="0"/>

        <Label Grid.Row="1"
               Grid.Column="0"
               AutomationId="scrollYLabel"
               x:Name="scrollYLabel"
               HorizontalOptions="Center"/>

        <Button Text="Change items source"
                Clicked="Button_Clicked"
                AutomationId="button"
                Grid.Row="2"
                Grid.Column="0"/>
    </Grid>
</ContentPage>