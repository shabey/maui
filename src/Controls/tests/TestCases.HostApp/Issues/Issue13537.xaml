<?xml version="1.0" encoding="utf-8" ?>
<local:TestShell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:local="using:Maui.Controls.Sample.Issues"
             xmlns:issues="using:Maui.Controls.Sample.Issues"
             x:Class="Maui.Controls.Sample.Issues.Issue13537">

  <TabBar AutomationId="TabBar13537">
    <Tab Title="Home" AutomationId="Home">
      <ShellContent
                Title="Home"                                                                        
                ContentTemplate="{DataTemplate local:MainHomePage}"
                Route="MainPage" />
    </Tab>
    <Tab Title="Favorites"
             AutomationId="favorite">
      <ShellContent
                Title="Favorites" AutomationId="Favourite"
                ContentTemplate="{DataTemplate local:FavoritePage}"
                Route="FavoritesPage" />
    </Tab>
    <Tab Title="Settings"
             AutomationId="settings">
      <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate local:SettingPage}"
                Route="SettingsPage" />
    </Tab>
  </TabBar>



</local:TestShell>