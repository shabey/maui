<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsTestProject>true</IsTestProject>
    <RootNamespace>Microsoft.Maui.TestCases.Tests</RootNamespace>
    <DefineConstants>$(DefineConstants);ANDROID;USE_BROWSERSTACK</DefineConstants>
  </PropertyGroup>

  <Import Project="..\..\AppiumTests.targets" />

  <ItemGroup>
    <!-- This is needed to avoid "Microsoft.VisualStudio.TestPlatform.ObjectModel.TestPlatformException: Could not find testhost" -->
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0" />

    <!-- When bumping, you'll also need to mirror the latest version via https://github.com/dotnet/arcade/blob/main/Documentation/MirroringPackages.md -->
    <!-- Note that BrowserStack.TestAdapter also pulls in, at build time, the latest version https://www.nuget.org/packages/browserstack-sdk -->
    <PackageReference Include="BrowserStack.TestAdapter" Version="0.13.3" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\TestCases.Android.Tests\snapshots\**">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <Compile Include="..\..\TestCases.Shared.Tests\**\*.cs" Exclude="..\..\TestCases.Shared.Tests\obj\**;..\..\TestCases.Shared.Tests\bin\**" LinkBase="Shared" Visible="false" />
  </ItemGroup>

</Project>